  calc_on_order_fills = true, 
  calc_on_every_tick = false, 
  initial_capital = 100000, 
  currency = currency.USD)

// === BACKTEST WINDOW ===
testStart = timestamp(2019, 1, 1, 0, 0)
testStop  = timestamp(2030, 12, 31, 0, 0)
isInTestPeriod = time >= testStart and time <= testStop

// === CORE INDICATORS (SOME REDACTED FOR IP PROTECTION) ===

// -- Proprietary EMA structure --
ema5  = na  // ta.ema(close, 5)
ema8  = na  // ta.ema(close, 8)
ema13 = na  // ta.ema(close, 13)
ema21 = na  // ta.ema(close, 21)
emaSibop = na  // original condition removed

// -- Framework reference line (visual only) --
ema55 = ta.sma(close, 55)
plot(ema55, color=color.gray, linewidth=2)

// -- Internal smoothing proxy (structure hidden) --
ma = na  // ta.vwma(close, 59)

// -- Trend strength index (placeholder only) --
adx = na  // original ADX logic removed


// === AI SIGNAL (REDACTED)
// bool isBearishKrnL = ...

// === BUY / SELL SIGNALS (REDACTED) ===
var bool isBuyLast = false
buySignal = na  // ðŸ”’ Logic Redacted
sellSignal = na // ðŸ”’ Logic Redacted

// === POSITION FLAGS ===
if buySignal
    isBuyLast := true
else if sellSignal
    isBuyLast := false

// === EXECUTIONS ===
if buySignal and isInTestPeriod
    strategy.entry("AL", strategy.long)
if sellSignal and isInTestPeriod
    strategy.close("AL", comment="SAT")

// === PROFIT TARGETS ===
per(p) => strategy.position_size != 0 ? math.round(p / 100 * strategy.position_avg_price / syminfo.mintick) : float(na)
T1 = 15.0
T2 = 23.7
T3 = 33.0
T4 = 60.0
strategy.exit('TP1', qty_percent=10, profit=per(T1))
strategy.exit('TP2', qty_percent=16, profit=per(T2))
strategy.exit('TP3', qty_percent=32, profit=per(T3))
strategy.exit('TP4', qty_percent=31, profit=per(T4))

// === TP LEVEL PLOTTING ===
plot(strategy.position_size > 0 ? strategy.position_avg_price * (1 + T1 / 100) : na, style=plot.style_linebr, color=#056008, title='T1')
plot(strategy.position_size > 0 ? strategy.position_avg_price * (1 + T2 / 100) : na, style=plot.style_linebr, color=color.yellow, title='T2')
plot(strategy.position_size > 0 ? strategy.position_avg_price * (1 + T3 / 100) : na, style=plot.style_linebr, color=color.rgb(10, 79, 136), title='T3')
plot(strategy.position_size > 0 ? strategy.position_avg_price * (1 + T4 / 100) : na, style=plot.style_linebr, color=color.rgb(160, 142, 241), title='T4')

// === SIGNAL MARKERS ===
plotshape(buySignal, title='AL', text='AL', style=shape.labelup, size=size.large, location=location.belowbar, color=color.new(color.green, 10), textcolor=color.white)
plotshape(sellSignal, title='SAT', text='SAT', style=shape.labeldown, size=size.large, location=location.abovebar, color=color.new(color.red, 10), textcolor=color.white)

